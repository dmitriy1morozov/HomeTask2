<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		>

		<ImageView
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:adjustViewBounds="true"
				android:background="@drawable/error404"
				android:scaleType="centerCrop"
				app:layout_constraintDimensionRatio="1:1"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				/>

		<Button
				android:id="@+id/btn_wifi_enable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@id/btn_mobiledata_enable"
				app:layout_constraintHorizontal_chainStyle="packed"
				android:layout_margin="8dp"
				android:text="Enable wifi"
				/>

		<Button
				android:id="@+id/btn_mobiledata_enable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toRightOf="@id/btn_wifi_enable"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_margin="8dp"
				android:text="Enable mobile data"
				/>
</android.support.constraint.ConstraintLayout>